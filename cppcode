int quiz::escore()
{
  {sc+=10;
 count++;
 }
 return sc;
}
int quiz::mscore()
{ {sc+=10;
 count++;
 }
 return sc;
}
int quiz::dise()
{
 switch(c)
 {
 case 1:
 cout<<"Ans1:(A)\n"<<"Ans2:(B)\n"<<"Ans3:(C)\n"<<"Ans4:(B)\n";
 break;
 case 2:
 cout<<"Ans1:(B)\n"<<"Ans2:(C)\n"<<"Ans3:(B)\n"<<"Ans4:(A)\n";
 break;
 case 3:
 cout<<"Ans1:(B)\n"<<"Ans2:(B)\n"<<"Ans3:(A)\n"<<"Ans4:(C)\n";
 break;
 default:cout<<"wrong choice:(\n";
 }
 return 0;
}  
int quiz::dism()
{
 switch(c)
 {
 case 1:
 cout<<"Ans1:(B)\n"<<"Ans2:(B)\n"<<"Ans3:(A)\n"<<"Ans4:(C)\n";
 break;
 case 2:
 cout<<"Ans1:(A)\n"<<"Ans2:(B)\n"<<"Ans3:(C)\n"<<"Ans4:(A)\n";
 break;
 case 3:
 cout<<"Ans1:(A)\n"<<"Ans2:(B)\n"<<"Ans3:(C)\n"<<"Ans4:(C)\n";
 break;
 default:cout<<"wrong choice:(\n";
 }
 return 0;
}  
int main()
{
 quiz q;
 int ch;
 char name[10],yn;
 cout<<"Menu\n"<<"1.Science\n"<<"2.Maths\n";
 cout<<"Enter your choice:(pls enter 1(science)/2(maths))\n";                 
  
 cin>>ch;
 switch (ch)
 {
  case 1:
  cout<<"Enter your name:\n";
  cin>>name;
  q.science();
  cout<<"\nWant to know the answers:\n(y/n)";
  cin>>yn;
  if(yn=='N'||yn=='n')
  cout<<"\nTHANKYOU FOR PLAYING\n"<<"\t"<<":-$\n";
  {
  if(yn=='Y'||yn=='y')
  cout<<"Answers of quiz no:1 is\n";
  q.dise();
  cout<<"\nTHANKYOU FOR PLAYING\n"<<"\t"<<":-$\n";
  exit(0);
  }
  break;
  case 2:
  cout<<"Enter your name:\n";
  cin>>name;
  q.mathematics();
  q.mscore();
  cout<<"\nWant to know the answers:\n(y/n)";
  cin>>yn;
  if(yn=='Y'||yn=='y')
  cout<<"Answers of quiz no:2 is\n";
  q.dism();
  if(yn=='N'||yn=='n')
  cout<<"\nTHANKYOU FOR PLAYING\n"<<"\t"<<":-$\n";
  break;
 default:cout<<"Wrong choice:(\n";
} 
 return 0;
}   


